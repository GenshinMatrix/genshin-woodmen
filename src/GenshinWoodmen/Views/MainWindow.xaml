                                <MenuItem.Icon>
                                    <TextBlock Text="&#xf71c;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="{DynamicResource SpecialScript}">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xf32a;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
