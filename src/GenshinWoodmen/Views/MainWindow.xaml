<Window x:Class="GenshinWoodmen.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main="clr-namespace:GenshinWoodmen"
        xmlns:local="clr-namespace:GenshinWoodmen.Views"
        Name="Self"
        ShowInTaskbar="False" Topmost="True" ResizeMode="NoResize" Opacity="0" d:Opacity="1"
        Icon="../Resources/favcion.ico" InputMethod.IsInputMethodEnabled="False"
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="Manual" Title="Genshin Woodmen" Height="50" Width="240"
        Left="{Binding Left,Converter={StaticResource AddConverter},ConverterParameter=-240}"
        Top="{Binding Top,Converter={StaticResource AddConverter},ConverterParameter=-50}"
        RenderOptions.BitmapScalingMode="Fant">
    <ContentControl.Resources>
        <ResourceDictionary>
            <SineEase x:Key="FadeInEase" EasingMode="EaseOut"/>
        </ResourceDictionary>
    </ContentControl.Resources>
    <i:Interaction.Behaviors>
        <local:UIElementDragMoveBehavior/>
    </i:Interaction.Behaviors>
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Style.Triggers>
                <EventTrigger RoutedEvent="Window.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4" BeginTime="0:0:0.0" EasingFunction="{StaticResource FadeInEase}"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    <Window.ContextMenu>
        <ContextMenu Padding="0,5" MinWidth="140">
            <MenuItem Header="{DynamicResource WoodGuide}" Command="{Binding UsageImageCommand}">
                <MenuItem.ToolTip>
                    <TextBlock>
                        <Run Text="{DynamicResource WoodGuideDetail}"/>
                    </TextBlock>
                </MenuItem.ToolTip>
                <MenuItem.Icon>
                    <TextBlock Text="&#xe8b9;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="{DynamicResource Usage}" Command="{Binding UsageCommand}">
                <MenuItem.ToolTip>
                    <TextBlock>
                        <Run Text="{DynamicResource UsageDetail}"/>
                    </TextBlock>
                </MenuItem.ToolTip>
                <MenuItem.Icon>
                    <TextBlock Text="&#xf71c;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="{DynamicResource TopMost}" Command="{Binding TopMostCommand}" CommandParameter="{x:Reference Self}">
                <MenuItem.Icon>
                    <TextBlock x:Name="TextBlockTopMost" Text="&#xe77a;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="{DynamicResource Exit}" Command="{Binding ExitCommand}">
                <MenuItem.Icon>
                    <TextBlock Text="&#xe7e8;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <Border x:Name="Border" Background="#EEFFFFFF" CornerRadius="4">
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="../Resources/favcion.png" Width="30" Height="30" ToolTip="{x:Static main:Pack.Version}">
                    <Image.Effect>
                        <DropShadowEffect Color="DimGray" Opacity="0.2" BlurRadius="7" ShadowDepth="2" Direction="275" />
                    </Image.Effect>
                </Image>
                <StackPanel Orientation="Vertical" Margin="5,0,0,0" MinWidth="45" HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="{Binding CurrentCount}">
                    <TextBlock Text="{DynamicResource Genshin}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="{DynamicResource Woodmen}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
                <Button x:Name="ButtonStart" ToolTip="{Binding CurrentStatus}" Command="{Binding StartCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}" Width="80" Height="28" Margin="10,0,0,0" FocusVisualStyle="{x:Null}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TextBlockStartIcon" Text="&#xf5b0;" FontFamily="{StaticResource SegoeFluent}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TextBlockStart" Text="{DynamicResource ButtonStart}" Margin="5,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Width="NaN" Margin="5,0,0,0" FocusVisualStyle="{x:Null}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xe713;" FontSize="16" FontFamily="{StaticResource SegoeFluent}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                    <Button.ContextMenu>
                        <ContextMenu Padding="0,5" MinWidth="140" MaxWidth="999">
                            <MenuItem>
                                <MenuItem.ToolTip>
                                    <TextBlock>
                                        <Run Text="{DynamicResource TimePredictionDetail}"/>
                                    </TextBlock>
                                </MenuItem.ToolTip>
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xe8ef;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                                </MenuItem.Icon>
                                <MenuItem.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" >
                                            <TextBlock Text="{DynamicResource TimePrediction}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xea3b;" FontSize="6" FontFamily="{StaticResource SegoeFluent}" VerticalAlignment="Center"/>
                                                <TextBlock Text="x3" Margin="5,0,0,0" Width="30"/>
                                                <TextBlock Text="&#xe916;" FontFamily="{StaticResource SegoeFluent}"/>
                                                <TextBlock Text="{Binding ForecastX3}" Margin="2,0,0,0"/>
                                                <TextBlock Text="{DynamicResource UnitMin}" Margin="2,0,0,0"/>
                                                <TextBlock Text="&#xeadf;" FontFamily="{StaticResource SegoeFluent}" Margin="10,0,0,0"/>
                                                <TextBlock Text="{Binding ForecastX3Count}" Margin="2,0,0,0"/>
                                                <TextBlock Text="{DynamicResource Count}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left">
                                                <TextBlock Text="&#xea3b;" FontSize="6" FontFamily="{StaticResource SegoeFluent}" VerticalAlignment="Center"/>
                                                <TextBlock Text="x6" Margin="5,0,0,0" Width="30"/>
                                                <TextBlock Text="&#xe916;" FontFamily="{StaticResource SegoeFluent}"/>
                                                <TextBlock Text="{Binding ForecastX6}" Margin="2,0,0,0"/>
                                                <TextBlock Text="{DynamicResource UnitMin}" Margin="2,0,0,0"/>
                                                <TextBlock Text="&#xeadf;" FontFamily="{StaticResource SegoeFluent}" Margin="10,0,0,0"/>
                                                <TextBlock Text="{Binding ForecastX6Count}" Margin="2,0,0,0"/>
                                                <TextBlock Text="{DynamicResource Count}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xea3b;" FontSize="6" FontFamily="{StaticResource SegoeFluent}" VerticalAlignment="Center"/>
                                                <TextBlock Text="x9" Margin="5,0,0,0" Width="30"/>
                                                <TextBlock Text="&#xe916;" FontFamily="{StaticResource SegoeFluent}"/>
                                                <TextBlock Text="{Binding ForecastX9}" Margin="2,0,0,0"/>
                                                <TextBlock Text="{DynamicResource UnitMin}" Margin="2,0,0,0"/>
                                                <TextBlock Text="&#xeadf;" FontFamily="{StaticResource SegoeFluent}" Margin="10,0,0,0"/>
                                                <TextBlock Text="{Binding ForecastX9Count}" Margin="2,0,0,0"/>
                                                <TextBlock Text="{DynamicResource Count}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xea3b;" FontSize="6" FontFamily="{StaticResource SegoeFluent}" VerticalAlignment="Center"/>
                                                <TextBlock Text="x12" Margin="5,0,0,0" Width="30"/>
                                                <TextBlock Text="&#xe916;" FontFamily="{StaticResource SegoeFluent}"/>
                                                <TextBlock Text="{Binding ForecastX12}" Margin="2,0,0,0"/>
                                                <TextBlock Text="{DynamicResource UnitMin}" Margin="2,0,0,0"/>
                                                <TextBlock Text="&#xeadf;" FontFamily="{StaticResource SegoeFluent}" Margin="10,0,0,0"/>
                                                <TextBlock Text="{Binding ForecastX12Count}" Margin="2,0,0,0"/>
                                                <TextBlock Text="{DynamicResource Count}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xea3b;" FontSize="6" FontFamily="{StaticResource SegoeFluent}" VerticalAlignment="Center"/>
                                                <TextBlock Text="x15" Margin="5,0,0,0" Width="30"/>
                                                <TextBlock Text="&#xe916;" FontFamily="{StaticResource SegoeFluent}"/>
                                                <TextBlock Text="{Binding ForecastX15}" Margin="2,0,0,0"/>
                                                <TextBlock Text="{DynamicResource UnitMin}" Margin="2,0,0,0"/>
                                                <TextBlock Text="&#xeadf;" FontFamily="{StaticResource SegoeFluent}" Margin="10,0,0,0"/>
                                                <TextBlock Text="{Binding ForecastX15Count}" Margin="2,0,0,0"/>
                                                <TextBlock Text="{DynamicResource Count}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem>
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xe916;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                                </MenuItem.Icon>
                                <MenuItem.ToolTip>
                                    <TextBlock>
                                        <Run Text="{DynamicResource ShutdownTimerDetail}"/>
                                    </TextBlock>
                                </MenuItem.ToolTip>
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{DynamicResource ShutdownTimer}" VerticalAlignment="Center"/>
                                        <ui:ToggleSwitch IsOn="{Binding PowerOffAuto,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" OnContent="{DynamicResource ON}" OffContent="{DynamicResource OFF}" Margin="10,0,0,0" MaxWidth="80" InputMethod.IsInputMethodEnabled="False"/>
                                        <ui:NumberBox Text="{Binding PowerOffAutoMinute,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding PowerOffAuto,Converter={StaticResource ReverseConverter}}" Margin="10,0,0,0" Minimum="0" Maximum="9999" InputMethod.IsInputMethodEnabled="False"/>
                                        <TextBlock Text="{DynamicResource MinAfterPowerOff}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem>
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xeadf;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                                </MenuItem.Icon>
                                <MenuItem.ToolTip>
                                    <TextBlock>
                                        <Run Text="{DynamicResource CountDetail}"/>
                                    </TextBlock>
                                </MenuItem.ToolTip>
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{DynamicResource LoopTimes}" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding CurrentCount}" Margin="15,0,0,0" MinWidth="0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBlock Text=" / " Margin="5,0,0,0" VerticalAlignment="Center"/>
                                        <ui:NumberBox Text="{Binding MaxCount,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Minimum="0" Maximum="9999" InputMethod.IsInputMethodEnabled="False"/>
                                        <TextBlock Text="{DynamicResource Count}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                        <Button Content="{DynamicResource ClearData}" Command="{Binding ClearCountCommand}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="{DynamicResource WoodGuide}" Command="{Binding UsageImageCommand}">
                                <MenuItem.ToolTip>
                                    <TextBlock>
                                        <Run Text="{DynamicResource WoodGuideDetail}"/>
                                    </TextBlock>
                                </MenuItem.ToolTip>
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xe8b9;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="{DynamicResource Usage}" Command="{Binding UsageCommand}">
                                <MenuItem.ToolTip>
                                    <TextBlock>
                                        <Run Text="{DynamicResource UsageDetail}"/>
                                    </TextBlock>
                                </MenuItem.ToolTip>
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xf71c;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="{DynamicResource ReloadConfigFile}" Command="{Binding ConfigReloadCommand}">
                                <MenuItem.ToolTip>
                                    <TextBlock>
                                        <Run Text="{DynamicResource ReloadConfigFileDetail}"/>
                                    </TextBlock>
                                </MenuItem.ToolTip>
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xe89f;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="{DynamicResource OpenConfigFile}" Command="{Binding ConfigOpenCommand}">
                                <MenuItem.ToolTip>
                                    <TextBlock>
                                        <Run Text="{DynamicResource OpenConfigFileDetail}"/>
                                    </TextBlock>
                                </MenuItem.ToolTip>
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xe8a0;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="{DynamicResource OpenWithConfigFile}" Command="{Binding ConfigOpenWithCommand}">
                                <MenuItem.ToolTip>
                                    <TextBlock>
                                        <Run Text="{DynamicResource OpenConfigFileDetail}"/>
                                    </TextBlock>
                                </MenuItem.ToolTip>
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xe8a0;" FontSize="8" FontFamily="{StaticResource SegoeFluent}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                    <i:Interaction.Behaviors>
                        <local:LeftContextMenuBehavior/>
                    </i:Interaction.Behaviors>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
